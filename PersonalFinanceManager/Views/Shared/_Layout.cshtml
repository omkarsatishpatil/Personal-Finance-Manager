<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar sticky-top navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("WalletWise", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink(User.Identity.Name, "SignIn", "Authentication", new { area = "" }, new { @class = "btn btn-dark mx-3" })
                    @Html.ActionLink("Sign Out", "SignOut", "Authentication", new { area = "" }, new { @class = "btn btn-light" })
                }
                else
                {
                    @Html.ActionLink("Sign Up", "SignUp", "Authentication", new { area = "" }, new { @class = "btn btn-light mx-1" })
                    @Html.ActionLink("Sign In", "SignIn", "Authentication", new { area = "" }, new { @class = "btn btn-dark mx-1" })
                }
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <h4>Contact Us</h4>
            <p>Have questions or need support? Our team is here to help. Feel free to reach out to us anytime through our <a href="/Home/Contact">contact page</a>.</p>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script src="~/Scripts/Script.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
